<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="3">ab-bonus-rzd</id>
	<name>РЖД Бонус</name>
	<description html="true"><![CDATA[
	<p>Получает баланc баллов и другую информацию по бонусной карте РЖД (https://rzd-bonus.ru).</p>
	<p>Информация берется из личного кабинета. </p>
	]]></description>	
	<instruction html="true"><![CDATA[
	<p>Регистрация в программе осуществляется здесь: https://rzd-bonus.ru/registration.html.</p>
	]]></instruction>
	<author>Dmitry Kochin &lt;dco@mail.ru&gt;</author>
	<depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Общая сумма баллов" units=" б"/>
		<counter id="pballs" name="Премиальные баллы" units=" б"/>
		<counter id="qballs1" name="Квалификационные баллы за текущий год" units=" б"/>
		<counter id="qballs2" name="Квалификационные баллы за прошлый год" units=" б"/>
		<counter id="cardnum" name="Номер карты" type="text"/>
		<counter id="status" name="Статус счета" type="text"/>
		<counter id="lastdate" name="Дата последней операции" type="time" format="dd.MM.yyyy"/>
		<counter id="lastsum" name="Сумма последней операции" units=" р"/>
		<counter id="lasttype" name="Тип последней операции" type="text"/>
		<counter id="lastpballs" name="Начислено прем. баллов по посл. операции" units=" б"/>
		<counter id="lastqballs" name="Начислено квал. баллов по посл. операции" units=" б"/>
		<counter id="lastoff" name="Списано баллов по посл. операции" units=" б"/>		
		<counter id="phone" name="Номер телефона" type="text"/>
		<counter id="fio" name="ФИО" type="text"/>
		
<!--	<counter id="balls_total" name="Всего набрано" units=" б"/>
		<counter id="balls_spent" name="Всего потрачено" units=" б"/> -->
		
	</counters>
	<keywords>rzd, российские железные дороги</keywords>
	<type>bonus</type>
	<country>ru</country>
</provider>