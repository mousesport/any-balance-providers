<?xml version="1.0" encoding="utf-8"?>
<provider>
    <id version="3">ab-internet-linkline</id>
	<api flags="no_browser"/>
    <name>LinkLine (Москва)</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о балансе и тарифном плане для московского интернет-провайдера LinkLine (https://linkline.ru/).</p>
	<p>Информация берется из личного кабинета https://stat.linkline.ru/</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
    <author>Dmitry Kochin &lt;dco@mail.ru&gt;</author>
    <depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
    <counters>
        <counter id="balance" name="Баланс" units=" р"/>
        <counter id="trafficIn" name="Вх. трафик в тек. периоде" units=" Gb"/>
        <counter id="trafficOut" name="Исх. трафик в тек. периоде" units=" Gb"/>
        <counter id="trafficLocal" name="Лок. трафик в тек. периоде" units=" Gb"/>
		<counter id="dateStart" name="Начало учетного периода" type="time" format="dd.MM.yyyy"/>
		<counter id="dateEnd" name="Окончание учетного периода" type="time" format="dd.MM.yyyy"/>
		<counter id="till" name="Дата исчерпания баланса" type="time" format="dd.MM.yyyy"/>
		<counter id="ipAddress" name="IP-адрес" type="text"/>
        <counter id="status" name="Состояние счета" type="text"/>
		<counter id="fio" name="ФИО" type="text"/>
    </counters>
    <keywords>интернет, линклайн</keywords>
    <type>internet</type>
    <country>ru</country>
</provider>
