<?xml version="1.0" encoding="utf-8"?>
<provider>
  <id version="8">ab-exchange-aliexpress</id>
  <api flags="no_browser"/>
  <name>Курс AliExpress</name>
  <description html="true"><![CDATA[
  <p>Предоставляет информацию о внутреннем курсе доллара в интернет-магазине AliExpress для международной (<a href="http://www.aliexpress.com/"/>AliExpress Global</a>) и российской (<a href="http://www.aliexpress.com/"/>AliExpress Россия</a>) площадок.</p>
  <p>Информация берется с сайта https://helpix.ru/ на странице https://helpix.ru/currency/.</p>
  ]]></description>
  <author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
  <depends>
      <module id="library"/>
  </depends>
  <files>
	  <icon>icon.png</icon>
      <js>main.js</js>
      <history>history.xml</history>
  </files>
  <counters>
      <counter id="rate" name="Курс AliExpress Global" prefix="AG$ " units=" ₽"/>
	  <counter id="rateru" name="Курс AliExpress Россия" prefix="AR$ " units=" ₽"/>
	  <counter id="ratecbrf" name="Курс ЦБ РФ" prefix="CB$ " units=" ₽"/>
	  <counter id="averrate" name="Ср. курс AliExpress Global" prefix="AG$~ " units=" ₽"/>
	  <counter id="averrateru" name="Ср. курс AliExpress Россия" prefix="AR$~ " units=" ₽"/>
	  <counter id="averratecbrf" name="Ср. курс ЦБ РФ" prefix="CB$~ " units=" ₽"/>
	  <counter id="trend" name="Тренд AliExpress Global" type="html"/>
	  <counter id="trendru" name="Тренд AliExpress Россия" type="html"/>
	  <counter id="trendcbrf" name="Тренд ЦБ РФ" type="html"/>
      <counter id="date" name="Дата курса" type="time" format="dd.MM.yyyy"/>
  </counters>
  <keywords>AliExpress, алиэкспресс, покупки, шоппинг, обмен валют</keywords>
  <type>exchange, shop</type>
  <country>ru</country>
</provider>
