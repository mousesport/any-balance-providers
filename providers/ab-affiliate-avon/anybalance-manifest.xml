<?xml version="1.0" encoding="utf-8"?>
<provider>
	<api flags="no_browser" />
	<id version="5">ab-affiliate-avon</id>
	<name>Avon</name>
	<description html="true"><![CDATA[
	<p>Получает баланс и другую информацию по представителю Avon (https://www.avon.ru).</p>
	<p>Информация берется из личного кабинета: https://www.avon.ru/REPSuite/.</p>
	]]></description>
	<instruction html="true"><![CDATA[
	<p>Для работы провайдера требуется ввести логин и пароль для входа в личный кабинет Avon.</p>
	]]></instruction>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Баланс" units=" {@currency}"/>
		<counter id="credit" name="Общий лимит" units=" {@currency}"/>
		<counter id="limit" name="Доступный лимит" units=" {@currency}"/>
		<counter id="penalty" name="Пени" units=" {@currency}"/>
		<counter id="quartordersum" name="Сумма заказов за квартал" units=" {@currency}"/>
		<counter id="tonextlevel" name="До след. уровня привилегий" units=" {@currency}"/>
		<counter id="garantdiscount" name="Гарантированная скидка" type="text"/>
		<counter id="monthordersum" name="Сумма заказов за месяц" units=" {@currency}"/>
		<counter id="rubdiscount" name="Скидка в рублях" units=" {@currency}"/>
		<counter id="currdiscount" name="Текущий уровень скидки" type="text"/>
		<counter id="tonextdiscount" name="До след. уровня скидки" units=" {@currency}"/>
		<counter id="bonus" name="Доступные баллы" units=" б"/>
		<counter id="p_bonus" name="Потенциальные баллы" units=" б"/>
		<counter id="h_bonus" name="Горящие баллы" units=" б"/>
		<counter id="expdate" name="Дата сдачи заказа" type="time" format="dd.MM.yyyy"/>
		<counter id="daysleft" name="До сдачи заказа" units=" дн"/>
		<counter id="orderdate" name="Дата заказа" type="time" format="dd.MM.yyyy"/>
		<counter id="operation" name="Тип операции" type="text"/>
		<counter id="paytill" name="Срок оплаты" type="time" format="dd.MM.yyyy"/>
		<counter id="ordersum" name="Сумма заказа" units=" {@currency}"/>
		<counter id="lastpay" name="Последний платеж" units=" {@currency}"/>
		<counter id="invoice" name="Счет-фактура" type="text"/>
		<counter id="phone" name="Номер телефона" type="text"/>
		<counter id="fio" name="ФИО" type="text"/>
	</counters>
	<keywords>Эйвон, авон, avon</keywords>
	<type>affiliate</type>
	<country>ru</country>
</provider>