        <counter id="amd_sell" name="AMD продажа" prefix="֏↑ " units=" ₽"/>
	    <counter id="amd_amount" name="AMD за сумму" prefix="֏+ " units=" ₽"/>
		<counter id="amd_cbrf" name="AMD ЦБ РФ" prefix="֏! " units=" ₽"/>
		<counter id="byn_purch" name="BYN покупка" prefix="Br↓ " units=" ₽"/>
        <counter id="byn_sell" name="BYN продажа" prefix="Br↑ " units=" ₽"/>
	    <counter id="byn_amount" name="BYN за сумму" prefix="Br+ " units=" ₽"/>
		<counter id="byn_cbrf" name="BYN ЦБ РФ" prefix="Br! " units=" ₽"/>
