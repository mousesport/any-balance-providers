<?xml version="1.0" encoding="utf-8"?>
<provider>
    <id major_version="3" version="7">ab-exchange-rosbank</id>
	<api flags="no_browser"/>
    <name>Курсы валют Росбанка</name>
    <description html="true"><![CDATA[
    <p>Предоставляет информацию о курсах валют от банка "Росбанк" со страницы https://www.rosbank.ru/obmen-valyuty/.</p>
	<p>Позволяет также ввести сумму имеющейся у вас валюты и выводит ваш капитал в случае продажи всей валюты Росбанку по текущей цене покупки.</p>
    ]]></description>
    <author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
    <depends>
  	    <module id="library"/>
    </depends>
    <files>
		<icon>icon.png</icon>
        <preferences>preferences.xml</preferences>
        <js>main.js</js>
	    <history>history.xml</history>
    </files>
    <counters>
        <counter id="usd_purch" name="USD покупка" prefix="$↓ " units=" ₽"/>
        <counter id="usd_sell" name="USD продажа" prefix="$↑ " units=" ₽"/>
	    <counter id="usd_amount" name="USD за сумму" prefix="$+ " units=" ₽"/>
		<counter id="usd_cbrf" name="USD ЦБ РФ" prefix="$! " units=" ₽"/>
        <counter id="eur_purch" name="EUR покупка" prefix="€↓ " units=" ₽"/>
        <counter id="eur_sell" name="EUR продажа" prefix="€↑ " units=" ₽"/>
	    <counter id="eur_amount" name="EUR за сумму" prefix="€+ " units=" ₽"/>
		<counter id="eur_cbrf" name="EUR ЦБ РФ" prefix="€! " units=" ₽"/>
		<counter id="cny_purch" name="CNY покупка" prefix="Ұ↓ " units=" ₽"/>
        <counter id="cny_sell" name="CNY продажа" prefix="Ұ↑ " units=" ₽"/>
	    <counter id="cny_amount" name="CNY за сумму" prefix="Ұ+ " units=" ₽"/>
		<counter id="cny_cbrf" name="CNY ЦБ РФ" prefix="Ұ! " units=" ₽"/>
		<counter id="kzt_purch" name="KZT покупка" prefix="₸↓ " units=" ₽"/>
        <counter id="kzt_sell" name="KZT продажа" prefix="₸↑ " units=" ₽"/>
