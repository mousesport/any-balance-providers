<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="2">ab-exchange-alfabank</id>
	<api flags="no_browser"/>
	<name>Курсы валют Альфа-Банка</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о курсах валют Альфа-Банка (https://alfabank.ru/).</p>
	<p>Информация берется со страницы https://alfabank.ru/currency/.</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="buyUSD" name="USD покупка" prefix="$↓ " units=" ₽"/>
        <counter id="sellUSD" name="USD продажа" prefix="$↑ " units=" ₽"/>
        <counter id="buyEUR" name="EUR покупка" prefix="€↓ " units=" ₽"/>
        <counter id="sellEUR" name="EUR продажа" prefix="€↑ " units=" ₽"/>
		<counter id="buyGBP" name="GBP покупка" prefix="£↓ " units=" ₽"/>
        <counter id="sellGBP" name="GBP продажа" prefix="£↑ " units=" ₽"/>
        <counter id="buyCHF" name="CHF покупка" prefix="₣↓ " units=" ₽"/>
        <counter id="sellCHF" name="CHF продажа" prefix="₣↑ " units=" ₽"/>
		<counter id="buyCNY" name="CNY покупка" prefix="Ұ↓ " units=" ₽"/>
        <counter id="sellCNY" name="CNY продажа" prefix="Ұ↑ " units=" ₽"/>
        <counter id="date" name="Дата курсов" type="time" format="dd.MM.yyyy"/>
	    <counter id="source" name="Источник курсов" type="text"/>
	</counters>
	<keywords>Курсы, валюта, доллар, евро, фунт, альфа-банк</keywords>
	<type>exchange</type>
	<country>ru</country>
</provider>
