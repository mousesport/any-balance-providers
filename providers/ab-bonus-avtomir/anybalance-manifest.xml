<?xml version="1.0" encoding="utf-8"?>
<provider>
	<api flags="no_browser"/>
	<id version="8">ab-bonus-avtomir</id>
	<name>Автомир (Бонусы)</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о балансе бонусной карты в системе Автомир НДК (http://www.avtomir.ru/)</p>
	<p>Информация берется из личного кабинета http://lk.avtomir.ru/personal/</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
    <depends>
  		<module id="library"/>
  	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Баланс" units=" Б"/>
		<counter id="number" name="Номер карты" type="text"/>
		<counter id="status" name="Статус карты" type="text"/>
		<counter id="balanceLast" name="Бонусы по последней операции" units=" Б"/>
<!--    <counter id="sumLast" name="Сумма последнего платежа" units=" {@sumCurrencyLast}"/> -->
		<counter id="dateLast" name="Дата последней транзакции" type="time" format="dd.MM.yyyy"/>
		<counter id="regionLast" name="Место последней операции" type="text"/>
		<counter id="typeLast" name="Тип последней операции" type="text"/>
		<counter id="phone" name="Номер телефона" type="text"/>
		<counter id="fio" name="ФИО" type="text"/>
	</counters>
	<keywords>бонусы, avtomir</keywords>
	<type>bonus</type>
	<country>ru</country>
</provider>